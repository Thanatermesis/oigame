<div class="cinfo">

  <div class="campa-home">
    <%= link_to campaign.get_absolute_url do %>
      <%= image_tag(campaign.image_url(:home), :class => "campa-img") %>
      <div class="campa-texto">
        <div class="campa-texto-left">
          <span><%= campaign.name %></span>
        </div><!-- left -->
        <div class="campa-texto-right">
          <img src="<%= avatar_url(campaign.user.email) %>" alt="creador de campaÃ±a"/>
        </div><!-- left -->
      </div><!-- campa-texto -->
    <% end %>
  </div>

  <div class="campaign-text">
    <div class="campaign-text-links">
      <%= campaign.to_html(truncate(campaign.intro,length:300,semparator:"...")).html_safe %>
      <% if campaign.status == "archived" %>
        <%= link_to campaign.get_absolute_url do %>
          <span class="label label-warning" style="font-size: 1em;"><%= t(:archived) %></span>
        <% end %>
      <% else %>
        <div id="progressbarlista">
          <h3 id="recogidaslista">  <i class="icon-bullhorn"></i><span class="highlighted"><%= campaign.messages_count %></span> <%= campaign.ttype_message %></h3>
          <div>
            <div class="span7">
              <div id="necesarias">
                <h4><i class="icon-signin"></i>
                  <span class="underlinedlista">
                    <%= campaign.participants_count %></span> <%= t(:people_have_already_participated) %>
                </h4>
              </div>
              <div id="necesarias">
                <h4><i class="icon-signin"></i>
                  <%= t(:miss) %> <span class="underlinedlista"><%= campaign.obj_minus_gotten_result %> </span><%= t(:firms_more) %>!
                </h4>
              </div>
            </div>
            <%= link_to t(:join), campaign.get_absolute_url, :title => campaign.name, :class => "btn span5" %>
          </div>
          <progress id="barlista" value="<%= campaign.participants_count %>" max="<%= campaign.target %>">
          <em><%= t(:has_gotten) %> <%= campaign.participants_count %> <%= t(:of) %> <%= campaign.target %> <%= t(:firms) %></em>
          </progress>
        </div>
      <% end %>
    </div><!-- campaign-text-links -->
  </div><!-- campaign-text -->

</div><!-- cinfo -->
